generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Session {
  id        String   @id
  sid       String   @unique
  data      String   // MediumText may be needed for MySql
  expiresAt   DateTime
}

model User {
  id Int @id @default(autoincrement())
  username String
  firstName String
  lastName String
  hash String
  folders Folder[]
}

model Folder {
  id Int @id @default(autoincrement())
  name String
  user User @relation(fields: [userId], references: [id])
  userId Int
  parentId Int? // Optional field for parent folder

  parentFolder Folder? @relation("folderParent", fields: [parentId], references: [id]) // Relation to parent folder
  childFolders Folder[] @relation("folderParent")
}